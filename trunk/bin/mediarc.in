#!/usr/bin/env python

import sys
from optparse import OptionParser


datadir = "@DATADIR@"


parser = OptionParser()
parser.add_option("-d", "--datadir", dest="datadir",
                  help="set the data directory")
(options, args) = parser.parse_args()

if options.datadir:
	datadir = options.datadir

sys.path = [datadir] + sys.path
import mediarc
mediarc.run(datadir)
